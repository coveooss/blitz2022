{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": [
            "../node_modules/@types",
            "./node_modules/@types",
            "./typings"
        ],
        "paths": {
            "*": ["../node_modules/*", "node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}
